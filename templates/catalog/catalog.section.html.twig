{% extends 'portal.html.twig' %}
{% block body %}
    <div class="container">
        <div class="col-md-9">
            <div class="mid-popular">
                {% for product in productsList %}
                <div class="col-md-4 item-grid1 simpleCart_shelfItem">
                    <div class=" mid-pop">
                        <div class="pro-img">
                            <img src="{{ asset('portal/images/pc.jpg') }}" class="img-responsive" alt="">
                        </div>
                        <div class="mid-1">
                            <div class="women">
                                <div class="women-top">
                                    <h6><a href="{{ path('portal_catalog_detail',{'section' :section , 'product' :product.symlink}) }}">{{ product.name }}</a></h6>
                                </div>
                                <div class="img item_add" style="height: 50px;">
                                    <a href="#"><img src="images/ca.png" alt=""></a>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="mid-2">
                                <p>{{ product.price }} руб</p>
                                <div class="block">
                                </div>

                                <div class="clearfix"></div>
                            </div>

                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div style="margin:10px 0px; clear:both;">
                {% for  i in 1..maxpage %}
                    <a href="{{ path('portal_catalog_section',{"section":section ,"page":i}) }}" class="{% if i == curpage %}active{% endif %} btn btn-lg btn-default">{{ i }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-3 product-bottom">
            {% include ('catalog/section.sidebar.html.twig')%}
        </div>
                    <div class="clearfix"></div>
    </div>
{% endblock %}
