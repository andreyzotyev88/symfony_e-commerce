<!DOCTYPE html>
<html>
<head>
    <title>Shopin A Ecommerce Category Flat Bootstrap Responsive Website Template | Home :: w3layouts</title>
    <link href="{{ asset("portal/css/bootstrap.css")}}" rel="stylesheet" type="text/css" media="all" />
    <link href="{{ asset("portal/css/style.css") }}" rel="stylesheet" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href="{{ asset("portal/css/style4.css") }}" rel="stylesheet" type="text/css" media="all" />
    <script src="{{ asset("portal/js/jquery.min.js") }}"></script>
    <script src="{{ asset("portal/js/jstarbox.js") }}"></script>
    <link rel="stylesheet" href="{{ asset("portal/css/jstarbox.css") }}" type="text/css" media="screen" charset="utf-8" />
</head>
<body>
<!--header-->
<div class="header">
    <div class="header-top">
        <div class="container">
            <div class="col-sm-5 col-md-offset-2  header-login">
                <ul >
                    {% if(not is_granted('ROLE_USER')) %}<li><a href="{{ path('app_login') }}">Login</a></li>{% endif %}
                    {% if(not is_granted('ROLE_USER')) %}<li><a href="{{ path('app_register') }}">Registration</a></li>{% endif %}
                    {% if(is_granted('ROLE_ADMIN')) %}<li><a href="{{ path('admin_table') }}">Admin sections</a>{% endif %}</li>
                    {% if(is_granted('ROLE_USER')) %}<li><a href="{{ path('app_logout') }}">Logout</a></li>{% endif %}
                </ul>
            </div>
            <div class="col-sm-5 header-social">
                <ul>
                    {% if(is_granted('ROLE_USER')) %}
                        <li style="color: white;">Вы зашли под :{{ app.user.username }}</li>
                    {% endif %}
                </ul>

            </div>
        </div>
    </div>

    <div class="container">

        <div class="head-top">

            <div class="col-sm-8 col-md-offset-2 h_menu4">
                <nav class="navbar nav_bottom" role="navigation">
                    <div class="collapse navbar-collapse" id="bs-megadropdown-tabs">
                        <ul class="nav navbar-nav nav_1">
                            <li><a class="color" href="{{ path("portal") }}">Main</a></li>
                            <li><a class="color" href="{{ path("portal_news") }}">News</a></li>
                            <li><a class="color" href="{{ path("portal_catalog") }}">Catalog</a></li>
                            {% if is_granted('ROLE_USER') %}
                                <li><a class="color" href="{{ path("personal_basket") }}">Basket</a></li>
                            {% endif %}
                            <li><a class="color" href="{{ path("portal_contact") }}">Contact</a></li>
                        </ul>
                    </div>

                </nav>
            </div>

            <div class="col-sm-2 search-right">
                {% if(is_granted('ROLE_USER')) %}
                <div class="cart box_1">
                    <a href="{{ path('personal_basket') }}">
                        <h3> <div class="total">
                                <span class="simpleCart_total"></span>    {{ basket_total_price()|format_price_rub}}
                            </div>
                            <img src="{{ asset("portal/images/cart.png") }}" alt=""/></h3>
                    </a>

                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% if(app.request.attributes.get('_route') == 'portal') %}
    <div style="border-bottom:1px solid grey;"></div>
{% else %}
<div class="banner-top">
    <div class="container">
        <h1>{{ h1 }}</h1>
    </div>
</div>
{% endif %}
<div class="container">
    <div class="page">
        {% block body %} {% endblock %}
    </div>
</div>
</div>

<script src="{{ asset("js/simpleCart.min.js") }}"> </script>
<script src="{{ asset("js/bootstrap.min.js") }}"> </script>
<script src="{{ asset("js/jquery.chocolat.js") }}"></script>
<link rel="stylesheet" href="{{ asset("css/chocolat.css") }}" type="text/css" media="screen" charset="utf-8">


</body>
</html>