{% extends 'admin.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
        <div class="card">
            <h5 class="card-header">Table: {{ title }}</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Login</th>
                            <th>Group</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for row in tablesResult %}
                        <tr>
                            <td>{{ row.getId }}</td>
                            <td>{{ row.getUsername }}</td>
                            <td>New York</td>
                            <td><a href="{{ path('admin_table_edit',{"id":row.getId,"table_name":"user"}) }}" class="btn btn-primary">Edit</a></td>
                        </tr>
                        {%  endfor %}
                        </tbody>
                    </table>
                </div><br>
                <a href="{{ path('admin_table_new',{"table_name":"user"}) }}" class="btn btn-success">Add new</a>
            </div>
        </div>
{% endblock %}
